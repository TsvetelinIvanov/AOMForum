@using AOMForum.Web.Models.Comments
@using static AOMForum.Common.ViewConstants.Comments.Delete
@model CommentDeleteModel

@{
    ViewData["Title"] = ViewTitle;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />

<h3 class="text-center">@SureToDelete</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SanitizedContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorUserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorUserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorProfilePictureURL)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.AuthorProfilePictureURL" alt="@(AltImage + Model.AuthorUserName)" width="100" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VotesCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VotesCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ChildrenCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChildrenCount)
        </dd>
    </dl>
    
    <form asp-area="" asp-controller="Comments" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@InputSubmitValue" class="btn btn-danger" />
    </form>
    <a asp-area="" asp-controller="Comments" asp-action="Details" asp-route-id="@Model.Id">@RefuseDeleteGoToDetails</a> |
    <a asp-area="" asp-controller="Posts" asp-action="Index">@RefuseDeleteGoToIndex</a>
</div>
