@using AOMForum.Web.Models.CommentReports
@using static AOMForum.Common.ViewConstants.CommentReports.Create
@model CommentReportInputModel

@{
    ViewData["Title"] = ViewTitle;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="" asp-controller="CommentReports" asp-action="Create"  asp-route-id="@Model.CommentId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="@InputSubmitValue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Comments" asp-action="Details" asp-route-id="@Model.CommentId">@GoToComment</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
