@using AOMForum.Common;
@using AOMForum.Data.Models;
@using Microsoft.AspNetCore.Identity
@using static AOMForum.Common.ViewConstants.Identity.LoginPartial
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (this.SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" @*asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"*@>@Hello @this.User.Identity?.Name!</a>
    </li>
        if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Administration" asp-controller="Users" asp-action="Index" title="Admin">@GoToUsersForAdmin</a> |
                <a class="nav-link text-dark" asp-area="Administration" asp-controller="Categories" asp-action="Index" title="Admin">@GoToCategoriesForAdmin</a> |
                <a class="nav-link text-dark" asp-area="Administration" asp-controller="Tags" asp-action="Index" title="Admin">@GoToTagsForAdmin</a>
            </li>
        }
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">@LogoutAction</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">@RegisterAction</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">@LoginAction</a>
    </li>
}
</ul>