@page
@model RegisterConfirmationModel
@{
    this.ViewData["Title"] = "Register confirmation";
}

<h1>@this.ViewData["Title"]</h1>
@{
    if (@this.Model.DisplayConfirmAccountLink)
    {
<p>
    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
            Normally this would be emailed: <a id="confirm-link" href="@this.Model.EmailConfirmationUrl">Click here to confirm your account</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}