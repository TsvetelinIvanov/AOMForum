@using AOMForum.Web.Models.Tags
@using static AOMForum.Common.ViewConstants.Administration.Tags.Delete
@model TagDeleteModel

@{
    ViewData["Title"] = ViewTitle;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<h3 class="text-center">@SureToDelete</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>        
    </dl>    
    <form asp-area="Administration" asp-controller="Tags" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@InputSubmitValue" class="btn btn-danger" />
    </form>
    <a asp-area="Administration" asp-controller="Tags" asp-action="Index">@BackToIndex</a>
</div>