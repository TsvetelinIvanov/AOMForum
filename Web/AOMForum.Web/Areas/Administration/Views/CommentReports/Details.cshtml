@using AOMForum.Web.Models.CommentReports
@using static AOMForum.Common.ViewConstants.Administration.CommentReports.Details
@model CommentReportDetailsViewModel

@{
    ViewData["Title"] = ViewTitle;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div>    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SanitizedCommentContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorUserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorUserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorProfilePictureURL)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.AuthorProfilePictureURL" alt="@(AltImage + Model.AuthorUserName)" width="100" />
        </dd>
    </dl>
</div>
<div>
    <a asp-area="Administration" asp-controller="CommentReports" asp-action="Delete" asp-route-id="@Model.Id">@DeleteAction</a> |
    <a asp-area="Administration" asp-controller="CommentReports" asp-action="Index">@GoToIndex</a> |
    <a asp-area="" asp-controller="Post" asp-action="Details" asp-route-id="@Model.CommentId">@GoToComment</a>
</div>
