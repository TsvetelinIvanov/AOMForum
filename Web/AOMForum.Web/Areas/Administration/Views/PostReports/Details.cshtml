@using AOMForum.Web.Models.PostReports
@using static AOMForum.Common.ViewConstants.Administration.PostReports.Details
@model PostReportDetailsViewModel

@{
    ViewData["Title"] = ViewTitle + Model.PostTitle;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div>    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SanitizedContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SanitizedContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorUserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorUserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorProfilePictureURL)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.AuthorProfilePictureURL" alt="@(AltImage + Model.AuthorUserName)" width="100" />
        </dd>
    </dl>
</div>
<div>
    <a asp-area="Administration" asp-controller="PostReports" asp-action="Delete" asp-route-id="@Model.Id">@DeleteAction</a> |    
    <a asp-area="Administration" asp-controller="PostReports" asp-action="Index">@GoToIndex</a> |
    <a asp-area="" asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId">@GoToPost</a> |
    <a asp-area="" asp-controller="Posts" asp-action="Index">@GoToPostIndex</a>
</div>